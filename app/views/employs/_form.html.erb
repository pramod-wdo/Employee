<%= form_with(model: employ, class: "space-y-6") do |form| %>
  <% if employ.errors.any? %>
    <div class="rounded-xl border border-red-200 bg-red-50 p-4">
      <h2 class="text-sm font-semibold text-red-900">
        <%= pluralize(employ.errors.count, "error") %> prohibited this employ from being saved:
      </h2>

      <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-red-900">
        <% employ.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rounded-xl border bg-white p-6 shadow-sm">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :first_name,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>

      <div>
        <%= form.label :middle_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :middle_name,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>

      <div>
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :last_name,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>

      <div>
        <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
        <%= form.telephone_field :phone_number,
          inputmode: "numeric",
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>

      <div>
        <%= form.label :gender, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :gender,
          [["Male", "male"], ["Female", "female"], ["Other", "other"]],
          { include_blank: "Select gender" },
          class: "mt-1 block w-full rounded-lg border-gray-300 bg-white shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>

      <div class="sm:col-span-2">
        <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :address,
          rows: 3,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>

      <div>
        <%= form.label :refno, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :refno,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900" %>
      </div>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2" %>

    <%= link_to "Cancel",
      (employ.persisted? ? employ_path(employ) : employs_path),
      class: "text-sm font-medium text-gray-700 hover:text-gray-900" %>
  </div>
<% end %>
