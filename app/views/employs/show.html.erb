<div class="flex items-start justify-between">
  <div>
    <h1 class="text-2xl font-semibold tracking-tight">Employee</h1>
    <p class="mt-1 text-sm text-gray-600">Details</p>
  </div>

  <div class="flex gap-2">
    <%= link_to "Edit", edit_employ_path(@employ),
        class: "rounded-md border px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <%= link_to "Back", employs_path,
        class: "rounded-md border px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
  </div>
</div>

<div class="mt-6 rounded-xl border bg-white p-6">
  <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <% @employ.attributes.each do |k, v| %>
      <div class="rounded-lg bg-gray-50 p-4">
        <dt class="text-xs font-semibold uppercase tracking-wider text-gray-600"><%= k.humanize %></dt>
        <dd class="mt-1 text-sm font-medium text-gray-900 break-words"><%= v %></dd>
      </div>
    <% end %>
  </dl>
</div>
